{
  "name": "wordpress-breeze/core",
  "description": "wordpress-breeze/core",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "wikimedia/composer-merge-plugin": "dev-master",
    "php": ">=7.1",
    "johnpbloch/wordpress": "^5",
    "stoutlogic/acf-builder": "^1",
    "twig/twig": "1.32",
    "timber/timber": "1.6",
    "dorfjungs/wp-breeze": "dev-dev",
    "wp-media/wp-rocket": "3.4.1.2",
    "wpackagist-plugin/post-duplicator": "^2",
    "wpackagist-plugin/better-wp-security": "^7.5.0",
    "wpackagist-plugin/classic-editor": "^1",
    "wpackagist-plugin/wp-mail-smtp":"^1",
    "advanced-custom-fields/advanced-custom-fields-pro": "*",
    "pattern-lab/edition-twig-standard": "*"
  },
  "autoload": {
    "psr-4": {
      "Breeze\\": "content/themes/breeze/src/"
    }
  },
  "extra": {
    "wordpress-install-dir": "wordpress",
    "installer-paths": {
      "content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ]
    },
    "merge-plugin": {
      "include": [
        "/var/www/app/composer/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "autoload": false,
      "merge-dev": true,
      "merge-extra": false,
      "merge-extra-deep": false,
      "merge-scripts": false
    }
  },
  "scripts": {
    "post-update-cmd": [
      "cd /var/www/app/content/plugins/wp-rocket && composer install",
      "cd /var/www/app/vendor/pattern-lab/edition-twig-standard && composer install",
      "cd /var/www/app/vendor/pattern-lab/edition-twig-standard && php core/console --config --set publicDir=../../../../www/app/patternlab",
      "cd /var/www/app/vendor/pattern-lab/edition-twig-standard && php core/console --config --set sourceDir=/../../../templates"
    ]
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.3",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t=5.8.3"
        },
        "require": {
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^3.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "a5hleyrich/wp-background-processing",
        "version": "1.3",
        "source": {
          "url": "https://github.com/tabrisrp/wp-background-processing",
          "type": "git",
          "reference": "master"
        }
      }
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ]
}
